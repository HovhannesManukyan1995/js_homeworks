pipeline {
    agent none
    triggers {
        GenericTrigger(
         genericVariables: [
          [key: 'ref', value: '$.ref']

         ],
         causeString: 'Triggered on $ref',
         regexpFilterExpression: '',
         regexpFilterText: '',
         printContributedVariables: true,
         printPostContent: true
        )
      }
        stages {
        stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    steps {
                        echo "on windows"
                    }
                    post {
                        always {
                            echo "post"
                        }
                    }
                }
                stage('Test On Linux') {
                    steps {
                        echo "on linux"
                    }
                    post {
                        always {
                            echo "posttt"
                        }
                    }
                }
            }
        }
    }
}

